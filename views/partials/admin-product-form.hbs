<div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name" value="{{product.name}}" placeholder="Enter name"
        required>
</div>
<div class="form-row mb-3">
    <label class="form-label" for="price">Price</label>
    <input class="form-control" type="number" name="price" id="price" value="{{product.price}}"
        placeholder="Enter Price" min="0">
</div>
<div class="form-row mb-3">
    <label class="form-label" for="inventory">inventory</label>
    <input class="form-control" type="number" name="inventory" id="inventory" value="{{product.inventory}}"
        placeholder="Enter Quantity" min="0">
</div>
<div class="form-row mb-3">
    <label class="form-label" for="description">Description</label>
    <textarea class="form-control" name="description" id="description" rows="3">{{product.description}}</textarea>
</div>
<div class="form-row mb-3">
    <label class="form-label" for="image">Image</label>
    <input class="form-control" type="file" class="form-control-file" id="image" name="image" multiple>
    <img class="img-responsive center-block" src="{{product.image}}"
        style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
</div>
<button type="submit" class="btn btn-primary">Submit</button>
<a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>