<div class="form-row mb-3">
    <label class="form-label" for="name">Name</label>
    <input class="form-control" type="text" name="name" id="name" value="{{goods.name}}" placeholder="Enter name"
        required>
</div>
<div class="form-row mb-3">
    <label class="form-label" for="price">Price</label>
    <input class="form-control" type="number" name="price" id="price" value="{{goods.price}}" placeholder="Enter Price"
        min="0">
</div>
<div class="form-row mb-3">
    <label class="form-label" for="quantity">Quantity</label>
    <input class="form-control" type="number" name="quantity" id="quantity" value="{{goods.quantity}}"
        placeholder="Enter Quantity" min="0">
</div>
<div class="form-row mb-3">
    <label class="form-label" for="description">Description</label>
    <textarea class="form-control" name="description" id="description" rows="3">{{goods.description}}</textarea>
</div>
<div class="form-row mb-3">
    <label class="form-label" for="image">Image</label>
    <input class="form-control" type="file" class="form-control-file" id="image" name="image" value="{{goods.image}}"
        multiple>
    <img class="img-responsive center-block" src="{{goods.image}}"
        style="width: 250px; margin-bottom: 25px; transition: opacity 0.5s; opacity:0;" onload="this.style.opacity=1;">
</div>
<button type="submit" class="btn btn-primary">Submit</button>
<a class="btn btn-outline-secondary" href="javascript:history.back()">Back</a>